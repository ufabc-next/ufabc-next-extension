{
	"editor.defaultFormatter": "biomejs.biome",
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.formatOnSave": true,
		"editor.codeActionsOnSave": {
			"quickfix.biome": "explicit"
		}
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome",
		"editor.formatOnSave": false,
		"editor.codeActionsOnSave": {
			"quickfix.biome": "explicit"
		}
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	}
}
