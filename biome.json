{
	"$schema": "https://biomejs.dev/schemas/1.9.3/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
      "complexity": {
        "noForEach": "info"
      },
      "suspicious": {
        "noAssignInExpressions": "off"
      }
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},

}
