  "schemaVersion" : 2,
  "dockerfileLines" :[
    "FROM node:9.11.2-alpine",
    "RUN node -v",
    "RUN mkdir -p /usr/src/app",
    "RUN apk --no-cache add pkgconfig autoconf automake libtool nasm build-base zlib-dev",
    "WORKDIR /usr/src/app",
    "COPY ./package.json /usr/src/app/",
    "RUN yarn install",
    "COPY ./ /usr/src/app",
    "ENV NODE_ENV production",
    "ENV PORT 80",
    "EXPOSE 80",
    "CMD [ \"yarn\", \"start\" ]"
  ]
