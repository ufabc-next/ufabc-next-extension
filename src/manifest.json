{
  "name": "UFABC Next",
  "short_name": "UFABC Next",
  "description": "Adiciona funcionalidades novas ao sistema de matricula da UFABC",
  "version": "1.2.0",
  "manifest_version": 3,
  "minimum_chrome_version": "55.0.0",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "http://*.ufabc.edu.br/*",
    "https://*.ufabc.edu.br/*",
    "http://localhost:8000/*",
    "http://*.felipecoder.com/*",
    "https://*.felipecoder.com/*",
    "http://*.naoseiprogramar.com.br/*",
    "https://*.naoseiprogramar.com.br/*",
    "http://*.ufabcnext.com/*",
    "https://*.ufabcnext.com/*"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["contentscript.js"],
      "matches": [
        "http://*.ufabc.edu.br/*",
        "https://*.ufabc.edu.br/*",
        "http://localhost:8000/*",
        "http://*.ufabcnext.com/*",
        "https://*.ufabcnext.com/*"
      ],
      "run_at": "document_end"
    }
  ],
  "key": "",
  "externally_connectable": {
    "matches": [
      "http://*.ufabc.edu.br/*",
      "https://*.ufabc.edu.br/*",
      "http://localhost:8000/*",
      "http://*.ufabcnext.com/*",
      "https://*.ufabcnext.com/*"
    ]
  },
  "action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "UFABC Matricula",
    "default_popup": "./Popup/index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "components/*",
        "images/*",
        "lib/*",
        "pages/*",
        "scripts/*",
        "services/*",
        "styles/*",
        "utils/*",
        "views/*",
        "html/*"
      ],
      "matches": [
        "http://*.ufabc.edu.br/*",
        "https://*.ufabc.edu.br/*",
        "http://localhost:8000/*",
        "http://*.ufabcnext.com/*",
        "https://*.ufabcnext.com/*"
      ]
    }
  ]
}
